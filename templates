    <script>
        const API_BASE = 'http://localhost:8000';
        
        function showLoading(elementId) {
            document.getElementById(elementId).innerHTML = '<div class="loading">–ó–∞–≥—Ä—É–∑–∫–∞...</div>';
        }
        
        function showError(elementId, message) {
            document.getElementById(elementId).innerHTML = `<div class="error">–û—à–∏–±–∫–∞: ${message}</div>`;
        }
        
        async function searchArticles() {
            const query = document.getElementById('searchQuery').value.trim();
            const limit = document.getElementById('searchLimit').value;
            const resultDiv = document.getElementById('searchResult');
            
            if (!query) {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –ø–æ–∏—Å–∫–æ–≤—ã–π –∑–∞–ø—Ä–æ—Å');
                return;
            }
            
            showLoading('searchResult');
            
            try {
                const response = await fetch(`${API_BASE}/articles/search/${encodeURIComponent(query)}?limit=${limit}`);
                const data = await response.json();
                
                if (!response.ok) {
                    throw new Error(data.detail || '–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–∏—Å–∫–µ');
                }
                
                let html = `<h3>–†–µ–∑—É–ª—å—Ç–∞—Ç—ã –ø–æ–∏—Å–∫–∞ –¥–ª—è "${data.query}" (–Ω–∞–π–¥–µ–Ω–æ: ${data.total_results})</h3>`;
                
                if (data.results && data.results.length > 0) {
                    data.results.forEach((article, index) => {
                        html += `<div class="result-item">
                            <strong>${index + 1}.</strong> ${article}
                            <button onclick="getArticleByTitle('${article.replace(/'/g, "\\'")}')" 
                                    style="margin-left: 10px; padding: 5px 10px; font-size: 12px;">
                                –ü–æ–∫–∞–∑–∞—Ç—å
                            </button>
                        </div>`;
                    });
                } else {
                    html += '<div class="result-item">–°—Ç–∞—Ç—å–∏ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã</div>';
                }
                
                resultDiv.innerHTML = html;
            } catch (error) {
                showError('searchResult', error.message);
            }
        }
        
        async function getArticle() {
            const title = document.getElementById('articleTitle').value.trim();
            const resultDiv = document.getElementById('articleResult');
            
            if (!title) {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Å—Ç–∞—Ç—å–∏');
                return;
            }
            
            await getArticleByTitle(title);
        }
        
        async function getArticleByTitle(title) {
            const resultDiv = document.getElementById('articleResult');
            
            showLoading('articleResult');
            
            try {
                const response = await fetch(`${API_BASE}/articles/${encodeURIComponent(title)}/summary`);
                const data = await response.json();
                
                if (!response.ok) {
                    throw new Error(data.detail || '–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ —Å—Ç–∞—Ç—å–∏');
                }
                
                let html = `<h3>${data.title}</h3>`;
                html += `<div class="result-item"><strong>–ö—Ä–∞—Ç–∫–æ–µ —Å–æ–¥–µ—Ä–∂–∞–Ω–∏–µ:</strong><br>${data.summary}</div>`;
                html += `<div class="result-item"><strong>–°—Å—ã–ª–∫–∞:</strong> <a href="${data.url}" target="_blank">${data.url}</a></div>`;
                
                if (data.categories && data.categories.length > 0) {
                    html += `<div class="result-item"><strong>–ö–∞—Ç–µ–≥–æ—Ä–∏–∏:</strong> ${data.categories.join(', ')}</div>`;
                }
                
                resultDiv.innerHTML = html;
            } catch (error) {
                showError('articleResult', error.message);
            }
        }
        
        async function getRandomArticle() {
            const language = document.getElementById('randomLanguage').value;
            const resultDiv = document.getElementById('randomResult');
            
            showLoading('randomResult');
            
            try {
                const response = await fetch(`${API_BASE}/articles/random?language=${language}`);
                const data = await response.json();
                
                if (!response.ok) {
                    throw new Error(data.detail || '–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ —Å–ª—É—á–∞–π–Ω–æ–π —Å—Ç–∞—Ç—å–∏');
                }
                
                let html = `<h3>üé≤ –°–ª—É—á–∞–π–Ω–∞—è —Å—Ç–∞—Ç—å—è</h3>`;
                html += `<div class="result-item"><strong>–ù–∞–∑–≤–∞–Ω–∏–µ:</strong> ${data.title}</div>`;
                html += `<div class="result-item"><strong>–ö—Ä–∞—Ç–∫–æ–µ —Å–æ–¥–µ—Ä–∂–∞–Ω–∏–µ:</strong><br>${data.summary}</div>`;
                html += `<div class="result-item"><strong>–°—Å—ã–ª–∫–∞:</strong> <a href="${data.url}" target="_blank">${data.url}</a></div>`;
                
                if (data.categories && data.categories.length > 0) {
                    html += `<div class="result-item"><strong>–ö–∞—Ç–µ–≥–æ—Ä–∏–∏:</strong> ${data.categories.join(', ')}</div>`;
                }
                
                resultDiv.innerHTML = html;
            } catch (error) {
                showError('randomResult', error.message);
            }
        }
        
        // –ü—Ä–∏–º–µ—Ä—ã –¥–ª—è –±—ã—Å—Ç—Ä–æ–≥–æ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
        document.getElementById('searchQuery').value = 'Python';
        document.getElementById('articleTitle').value = 'Python (programming language)';
    </script>
